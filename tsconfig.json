{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "rootDir": "./src",
    "outDir": "dist/",
  },
  "include": [
    "src/**/*",
    "tests",
  ],
  "exclude": [
    "node_modules"
  ]
}